<div class="container">
  <div class="row">
    <div class="col">
      <h1>会員一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <p><%= customer.id %></p>
              </td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <p><%= customer.last_name %><%= customer.first_name %></p>
                <% end %>
              </td>
              <td>
                <p><%= customer.email %></p>
              </td>
              <td>
                <p><%= customer.is_active ? "有効" : "退会" %></p>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>