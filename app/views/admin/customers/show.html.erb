<div class="container">
  <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
  <div class="row">
    <div class="col-lg-12">
      <div>
        <span>会員ID</span>
        <span><%= @customer.id %></span>
      </div>
      <div>
        <span>氏名</span>
        <span><%= @customer.last_name %><%= @customer.first_name %></span>
      </div>
      <div>
        <span>フリガナ</span>
        <span><%= @customer.last_name_kana %><%= @customer.first_name_kana %></span>
      </div>
      <div>
        <span>郵便番号</span>
        <span><%= @customer.postal_code %></span>
      </div>
      <div>
        <span>住所</span>
        <span><%= @customer.address %></span>
      </div>
      <div>
        <span>電話番号</span>
        <span><%= @customer.telephone_number %></span>
      </div>
      <div>
        <span>メールアドレス</span>
        <span><%= @customer.email %></span>
      </div>
      <div>
        <span>会員ステータス</span>
        <span><%= @customer.is_active ? "有効" : "退会" %></span>
      </div>
      <div>
        <span><%= link_to "編集する", edit_admin_customer_path(@customer.id) %></span>
        <span><%= link_to "注文履歴一覧を見る", admin_root_path  %></span>
      </div>
    </div>
  </div>
</div>