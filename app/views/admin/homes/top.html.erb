<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <!--<th>注文ステータス</th>-->
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
              <p><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
              <% end %>
            </td>
            <td>
              <p><%= order.name %></p>
            </td>
            <td>
              <p><%#= order.order_datails.amount %></p>
            </td>
            <!--<td>-->
            <!--  <p><%#= order.status %></p>-->
            <!--</td>-->
          </tr>
        <% end %>
      </tbody>
    </table>