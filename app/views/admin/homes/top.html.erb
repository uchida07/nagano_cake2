<div class="container">
  <div class="row">
    <h1>注文履歴一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <p><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
            </td>
            <td>
              <p><%= order.name %></p>
            </td>
            <td>
              <p><%= order.amount %></p>
            </td>
            <td>
              <p><%= order.status %></p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>