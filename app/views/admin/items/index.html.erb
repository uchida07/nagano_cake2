<h1>商品一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <p><%= item.id %></p>
        </td>
        <td>
          <p><%= item.name %></p>
        </td>
        <td>
          <p><%= item.price %>円</p>
        </td>
        <td>
          <p><%= item.genre_id %></p>
        </td>
        <td>
          <p><%= item.is_active ? "販売中" : "販売停止中" %></p>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>