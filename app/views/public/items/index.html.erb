<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-6 mb-4">
        <%= link_to item_path(item.id) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>

        <div>
          <p><%= item.name %></p>
          <p><%= item.price %></p>
        </div>
        <% end %>
      </div>
    <% end %>
<%= paginate @items %>