<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>
<div>
  <span>商品名</span>
  <span><%= @item.name %></span>
</div>
<div>
  <span>商品名説明</span>
  <span><%= @item.introduction %></span>
</div>
<div>
  <span>¥<%= @item.price %>(税込)</span>
</div>
<div>
  <span><%= @order_datail.number_field :amount %>円</span>
  <span><%= @order_datail.submit 'カートに入れる' %></span>
</div>