<div class="container">
<h1>マイページ</h1>
  <div class="row">
    <div class="col-lg-12">
      <div>
        <span>登録情報</span>
        <span><%= link_to "編集する", edit_my_page_path %></span>
      </div>
      <table class="table table-bordered">
        <tr><th>氏名</th><td><%= @my_page.last_name %><%= @my_page.first_name %></td></tr>
        <tr><th>カナ</th><td><%= @my_page.last_name_kana %><%= @my_page.first_name_kana %></td></tr>
        <tr><th>郵便番号</th><td><%= @my_page.postal_code %></td></tr>
        <tr><th>住所</th><td><%= @my_page.address %></td></tr>
        <tr><th>電話番号</th><td><%= @my_page.telephone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= @my_page.email %></td></tr>
      </table>
      <div>
        <div>
          <span>配送先</span>
          <span><%= link_to "一覧を見る" , addresses_path %></span>
        </div>
        <div>
          <span>注文履歴</span>
          <span><%= link_to "一覧を見る" , orders_path %></span>
        </div>
      </div>
    </div>
  </div>
</div>
