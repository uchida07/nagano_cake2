<div class="container">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-bordered">
        <h4>注文情報</h4>
        <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
        <tr><th>配送先</th><td>〒<%= @order.postal_code %></br><%= @order.address %></br><%= @order.name %></td></tr>
        <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
        <tr><th>ステータス</th><td></td></tr>
      </table>
    </div>
    <div class="col-lg-3">
      <table class="table table-bordered">
        <h4>請求情報</h4>
        <tr><th>商品合計</th><td><%#= @total.round.to_s(:delimited) %>円</td></tr>
        <tr><th>配送料</th><td><%= @order.postage %>円</td></tr>
        <tr><th><strong>ご請求額</strong></th><td><%= @order.billing_amount %>円</td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td>
                <p><%= @order.order_datail.item.name %></p>
              </td>
              <td>
                <p><%= @order.order_datails.item.price %></p>
              </td>
              <td>
                <p><%= @order.order_datails.amount %></p>
              </td>
              <td>
                <p><%= cart_item.subtotal%>円</p>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>